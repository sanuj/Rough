<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/navigation_bar_style"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micar.component.TextViewCustom
            style="@style/navbar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/table_lyt_mipoints"
                style="@style/reserve_car_field_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_rounded_top_only"
                    android:gravity="center_vertical" >

                    <com.micar.component.TextViewCustom
                        style="@style/details_txtfield_heading_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reservation_id" />

                    <com.micar.component.TextViewCustom
                        android:id="@+id/txtview_reservation_id"
                        style="@style/details_txtfield_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_middle_bottom_line_only"
                    android:gravity="center_vertical" >

                    <com.micar.component.TextViewCustom
                        style="@style/details_txtfield_heading_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reservation_for" />

                    <com.micar.component.TextViewCustom
                        android:id="@+id/txtview_reservation_for"
                        style="@style/details_txtfield_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_middle_bottom_line_only"
                    android:gravity="center_vertical" >

                    <com.micar.component.TextViewCustom
                        style="@style/details_txtfield_heading_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expected_start_date" />

                    <com.micar.component.TextViewCustom
                        android:id="@+id/txtview_expected_start_Date"
                        style="@style/details_txtfield_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_middle_bottom_line_only"
                    android:gravity="center_vertical" >

                    <com.micar.component.TextViewCustom
                        style="@style/details_txtfield_heading_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/expected_end_date" />

                    <com.micar.component.TextViewCustom
                        android:id="@+id/txtview_expected_end_date"
                        style="@style/details_txtfield_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/row_middle_bottom_line_only"
                    android:gravity="center_vertical" >

                    <com.micar.component.TextViewCustom
                        style="@style/details_txtfield_heading_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/actual_start_date" />

                    <com.micar.component.TextViewCustom
                        android:id="@+id/txtview_actual_start_date"
                        style="@style/details_txtfield_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/linear_lyt_done"
                style="@style/done_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.micar.component.ButtonCustom
                    android:id="@+id/btn_extend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/reserve_btn"
                    android:padding="15dp"
                    android:text="@string/extend_reservation" />

                <com.micar.component.ButtonCustom
                    android:id="@+id/btn_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/reserve_btn"
                    android:padding="15dp"
                    android:text="@string/end_reservation" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>