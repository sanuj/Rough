                <TextView style="@style/divider_style" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/textview_share_on_fb"
                    style="@style/setting_textview_style"
                    android:drawableLeft="@drawable/support"
                    android:text="@string/share_on_fb" />

                <TextView style="@style/divider_style" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_row_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.micar.component.TextViewCustom
                        android:id="@+id/user_settings_textViewProfile"
                        style="@style/text_black_style"
