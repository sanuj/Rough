            </LinearLayout>
           
        </RelativeLayout>
                -->

                <TextView style="@style/divider_style" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/textview_gmail"
                    style="@style/setting_textview_style"
                    android:drawableLeft="@drawable/support"
                    android:text="@string/from_gmail" />

                <TextView style="@style/divider_style" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/textview_yahoo"
                    style="@style/setting_textview_style"
                    android:drawableLeft="@drawable/support"
                    android:text="@string/from_yahoo" />

                <TextView style="@style/divider_style" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/textview_entering_email"
                    style="@style/setting_textview_style"
                    android:drawableLeft="@drawable/support"
                    android:text="@string/by_entering_email"
