<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/navigation_bar_style"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micar.component.TextViewCustom
            style="@style/navbar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        style="@style/my_account_field_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.micar.component.TextViewCustom
                style="@style/my_account_label_field_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mi_points" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/table_lyt_mipoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                style="@style/my_account_table_row_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <com.micar.component.TextViewCustom
                    style="@style/my_account_label_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/txtView_mi_points_total"
                    style="@style/my_account_txt_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_field"
                    android:text="000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                style="@style/my_account_table_row_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <com.micar.component.TextViewCustom
                    style="@style/my_account_label_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/earned" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/txtView_mipoints_earned"
                    style="@style/my_account_txt_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_field"
                    android:text="000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                style="@style/my_account_table_row_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <com.micar.component.TextViewCustom
                    style="@style/my_account_label_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/burned" />

                <com.micar.component.TextViewCustom
                    android:id="@+id/txtView_mi_points_burned"
                    style="@style/my_account_txt_field_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/payment_field"
                    android:text="000" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>