<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_map_header_relativeLyt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar"
         >

        <ImageView
            android:id="@+id/imageview_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_icon" />

        <com.micar.component.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_style"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/textview_signout"
            android:layout_toRightOf="@+id/imageview_setting"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/app_name" />

        <com.micar.component.TextViewCustom
            android:id="@+id/textview_signout"
            style="@style/text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:text="@string/sign_out"
            />
    </RelativeLayout>

   

       

</LinearLayout>