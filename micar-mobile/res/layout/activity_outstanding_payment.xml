<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/navigation_bar_style"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micar.component.TextViewCustom
            style="@style/navbar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        style="@style/my_account_field_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.micar.component.TextViewCustom
                style="@style/my_account_label_field_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/outstanding_payment" />

            <com.micar.component.TextViewCustom
                android:id="@+id/txtView_outstanding_paymnt_amnt"
                style="@style/my_account_txt_field_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="@drawable/payment_field"
                android:text="000" />
        </LinearLayout>

        <com.micar.component.ButtonCustom
            android:id="@+id/btn_pay"
            style="@style/my_account_btn_style"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/booking_field_vertical_margin"
            android:text="@string/pay" />
    </LinearLayout>

</LinearLayout>