<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/navigation_bar_style"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.micar.component.TextViewCustom
            style="@style/navbar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow_permited_states"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.micar.component.TextViewCustom
            android:id="@+id/txtview_detail_label"
            style="@style/details_txtfield_heading_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/permited_state"
            android:textStyle="bold" />

        <com.micar.component.TextViewCustom
            android:id="@+id/txtview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="false"
            android:text="000"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <!-- com.micar.component.TextViewCustom -->

</LinearLayout>