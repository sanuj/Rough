<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageview_car_lover"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview_active_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollingCache="false" />

        <com.micar.component.TextViewCustom
            android:id="@+id/textview_no_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_active_reserve"
            android:textColor="@color/black"
            android:layout_gravity="center|center_vertical"
            android:textSize="@dimen/heading_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_car_lover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/car_lover" />

</RelativeLayout>